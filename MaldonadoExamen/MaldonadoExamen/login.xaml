<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaldonadoExamen.MainPage">

    <StackLayout BackgroundColor="#FFD700">

        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Image Source="logo.png"/>
        </Frame>
        

        <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario "></Entry>
        <Entry x:Name="txtContrasena" Placeholder="Ingrese la Contrasena" IsPassword="True"></Entry>

        <Button x:Name="btnAbrir" Text="Iniciar Sesion" Clicked="btnAbrir_Clicked"></Button>
        <Label x:Name="lblResultado"  Text="" TextColor="Red"/>


    </StackLayout>

</ContentPage>
